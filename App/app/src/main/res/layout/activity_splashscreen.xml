<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:background="@color/c3_bg" >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitCenter"
        android:src="@drawable/c3_logo"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connecting Capabilities"
        android:layout_below="@id/logo"
        android:textColor="@color/c3_lightgrey"
        android:textSize="24sp"
        android:layout_centerInParent="true"
        android:id="@+id/c3_tagline"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/sign_in_btn"
        android:text="Sign In"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/c3_blue"
        android:backgroundTintMode="src_over"
        android:layout_marginBottom="30dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/sign_up_btn"
        android:text="Sign Up"
        android:backgroundTint="@color/c3_blue"
        android:backgroundTintMode="src_over"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:layout_above="@+id/sign_in_btn"
        />


    


</RelativeLayout>